<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="PRODUCT TITLE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_description_black_18dp"
                android:drawablePadding="5dp"
                android:text="SAMPLE DESCRIPTION" />

            <TextView
                android:id="@+id/text_key_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_vpn_key_black_18dp"
                android:drawablePadding="5dp"
                android:text="SAMPLE PRICE" />

            <TextView
                android:id="@+id/text_standard_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_attach_money_black_18dp"
                android:drawablePadding="5dp"
                android:text="SAMPLE FEATURE" />

            <TextView
                android:id="@+id/text_standard_onboards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_business_center_black_18dp"
                android:drawablePadding="5dp"
                android:text="SAMPLE ONBOARDS" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>